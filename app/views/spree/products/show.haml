- cache [I18n.locale, current_currency, @product] do
  %div{:itemscope => "", :itemtype => "http://schema.org/Product"}
    - @body_id = 'product-details'
    .columns.six.alpha
      .row
        #product-images
          #main-image
            = render :partial => 'image'
          #thumbnails
            = render :partial => 'thumbnails'
        %div
          = render :partial => 'properties'
        %div
          = render :partial => 'promotions'
    .columns.ten.omega
      .row
        #product-description
          %h1.product-title{:itemprop => "name"}= @product.name
          %div{:itemprop => "description"}
            = product_description(@product) rescue Spree.t(:product_has_no_description)
          #cart-form
            = form_for :order, :url => populate_orders_path do |f|
              #inside-product-cart-form{:itemprop => "offers", :itemscope => "", :itemtype => "http://schema.org/Offer"}
                - if @product.variants_and_option_values(current_currency).any?
                  #product-variants.columns.five.alpha
                    %h6.product-section-title= Spree.t(:variants)
                    %ul
                      - @product.variants_and_option_values(current_currency).each_with_index do |variant, index|
                        %li
                          = radio_button_tag "variant_id", variant.id, index == 0, 'data-price' => variant.price_in(current_currency).money
                          = label_tag "variant_id_#{ variant.id }" do
                            %span.variant-description
                              = variant_options variant
                            - if variant_price variant
                              %span.price.diff= variant_price variant
                            - unless variant.can_supply?
                              %span.out-of-stock= Spree.t(:out_of_stock)
                - else
                  = hidden_field_tag "variant_id", @product.master.id
                - if @product.price_in(current_currency) and !@product.price.nil?
                  .columns.five.if.alpha.else.omega{:class => "<haml_silent> !@product.has_variants? </haml_silent><haml_block> </haml_block><haml_silent> </haml_silent><haml_block> </haml_block>", "data-hook" => "product_price"}
                    #product-price
                      %h6.product-section-title= Spree.t(:price)
                      %div
                        %span.price.selling{:itemprop => "price"}
                          = display_price(@product)
                        %span{:content => @product.currency, :itemprop => "priceCurrency"}
                      - if @product.master.can_supply?
                        %link{:href => "http://schema.org/InStock", :itemprop => "availability"}/
                      - elsif @product.variants.empty?
                        %br/
                        %span.out-of-stock= Spree.t(:out_of_stock)
                    .add-to-cart
                      = number_field_tag :quantity, 1, :class => 'title', :min => 1
                      = button_tag :class => 'large primary', :id => 'add-to-cart-button', :type => :submit do
                        = Spree.t(:add_to_cart)
                - else
                  #product-price
                    %br/
                    %div
                      %span.price.selling{:itemprop => "price"}= Spree.t('product_not_available_in_this_currency')
        = render :partial => 'taxons'